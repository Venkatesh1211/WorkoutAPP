<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#4966CF"
        android:elevation="4dp"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"/>


    <ImageView
        android:id="@+id/workoutImage"
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#C7D3DF"
        app:layout_constraintTop_toBottomOf="@id/workoutImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/cardText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="8dp"
            android:textColor="#333333"
            android:text="Calisthenics is a form of exercise that uses bodyweight movements to improve strength, flexibility, and endurance. Common exercises include push-ups, pull-ups, squats, and dips, requiring minimal equipment."
            android:textSize="15sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/exercisesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/squatImage"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:contentDescription="Squat Exercise"
                android:src="@drawable/img_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Plank"
                android:textColor="#171616"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/squatImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/PlB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Squat Video"
                android:src="@drawable/baseline_slow_motion_video_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/benchPressImage"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:contentDescription="Bench Press Exercise"
                android:src="@drawable/img_19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Crunch"
                android:textColor="#171616"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/benchPressImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/benchPressvideoBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bench Press Video"
                android:src="@drawable/baseline_slow_motion_video_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/deadliftImage"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:contentDescription="Deadlift Exercise"
                android:src="@drawable/img_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Pull Up"
                android:textColor="#171616"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/deadliftImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/deadliftVvdeoBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Deadlift Video"
                android:src="@drawable/baseline_slow_motion_video_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/lsit"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:contentDescription="Deadlift Exercise"
                android:src="@drawable/lsit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="L- Sit"
                android:textColor="#171616"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/lsit"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/deadliftVvdeoBtn1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Deadlift Video"
                android:src="@drawable/baseline_slow_motion_video_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/Burpee"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:contentDescription="Deadlift Exercise"
                android:src="@drawable/burpee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Burpee"
                android:textColor="#171616"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/Burpee"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/deadliftVvdeoBtn2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Deadlift Video"
                android:src="@drawable/baseline_slow_motion_video_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
